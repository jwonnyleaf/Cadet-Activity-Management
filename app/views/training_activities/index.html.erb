<h1>Training Activities</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Activity Type</th>
      <th>Description</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @training_activities.each do |training_activity| %>
      <tr>
        <td><%= training_activity.title %></td>
        <td><%= training_activity.activity_type %></td>
        <td><%= training_activity.description %></td>
        <td><%= training_activity.start_time %></td>
        <td><%= training_activity.end_time %></td>
        <td><%= training_activity.status %></td>
        <td><%= link_to 'Show', training_activity %></td>
        <td><%= link_to 'Edit', edit_training_activity_path(training_activity) %></td>
        <td><%= link_to 'Delete', training_activity, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Training Activity', new_training_activity_path %>

<div>
  <%= link_to "Logout", logout_path %>
</div>
