<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      User Details
    </div>
    <div class="card-body">
      <p class="card-text"><strong>First Name:</strong> <%= @user.first_name %></p>
      <p class="card-text"><strong>Last Name:</strong> <%= @user.last_name %></p>
      <p class="card-text"><strong>Email:</strong> <%= @user.email %></p>
      <p class="card-text"><strong>Minor Unit:</strong> <%= @user.unit.name %></p>
      <p class="card-text"><strong>Major Unit:</strong> <%= @user.unit.parent.name %></p>

    <div class="card-footer">
      <%= link_to "Edit", edit_admin_path(@user), class: "btn btn-primary" %>
      <%= link_to "Delete", admin_path(@user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      <%= link_to "Back", admin_index_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
